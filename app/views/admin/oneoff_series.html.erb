<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Create One-Off Series</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Home', root_path %>
      </li>
      <li>
        <%= link_to 'Administration', admin_path %>
      </li>
      <li class="active">
        <strong>One-Off Series</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<div class="wrapper wrapper-content">
  <div class="row animated fadeInRight">


    <div class="col-md-6">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Add New Series</h5>
        </div>
        <div class="ibox-content">
          <%= bootstrap_form_tag url: create_oneoff_series_admin_path do |f| %>
          <div class="input-group date text-right" id="start-date">
            <span class="input-group-addon">Series Start Date</span>
            <%= f.text_field "start", hide_label: true, control_class: 'form-control' %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
          <br />
          <div class="input-group date text-right" id="end-date">
            <span class="input-group-addon">Series End Date</span>
            <%= f.text_field "end", hide_label: true, control_class: 'form-control' %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
          <hr />
          <div class="input-group">
            <%= f.select("team_1", options_from_collection_for_select(Team.all, 'id', 'name'), { hide_label: false }, { class: 'input' }) %>
          </div>
          <br />
          <div class="input-group">
            <%= f.select("team_2", options_from_collection_for_select(Team.all, 'id', 'name'), { hide_label: false }, { class: 'input' }) %>
          </div>
          <br />
          <%= f.submit "Create Series", class: 'btn btn-primary' %>
         <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6"></div>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#start').datepicker({
            format: 'mm/dd/yyyy',
            autoclose: true
        });
        $('#end').datepicker({
            format: 'mm/dd/yyyy',
            autoclose: true
        });
    });
</script>