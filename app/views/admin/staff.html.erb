<div class="row">
  <div class="col-md-12">
    <%= bootstrap_form_tag url: update_page_admin_path do |f| %>
        <%= md_simple_editor  do %>
            <%= f.text_area :contents, value: @staff.contents, label: false, rows: 50 %>
        <% end %>
        <div class="text-right">
          <%= f.hidden_field_tag :shortname, 'staff' %>
          <%= f.submit 'Update Staff Page' %>
        </div>
    <% end %>
  </div>
</div>