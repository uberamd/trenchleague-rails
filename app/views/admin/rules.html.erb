<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Edit Rules</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to 'Home', root_path %>
      </li>
      <li>
        <%= link_to 'Administration', admin_path %>
      </li>
      <li class="active">
        <strong>Rules</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2"></div>
</div>

<div class="wrapper wrapper-content">
  <div class="row animated fadeInRight">


    <div class="col-md-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= bootstrap_form_tag url: update_page_admin_path do |f| %>
              <%= f.text_area :contents, value: @rules.contents, label: false, rows: 50, data: { provide: "markdown" } %>
              <div class="text-right">
                <%= f.hidden_field :shortname, :value => 'rules' %>
                <%= f.submit 'Update Rules', class: 'btn btn-primary' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
